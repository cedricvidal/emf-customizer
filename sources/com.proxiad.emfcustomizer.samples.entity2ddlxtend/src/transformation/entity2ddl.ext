import ddl;
import entity;

extension entity::Extensions reexport;

schema( Domain d ) :
	let s = new Schema :
	s.setName(d.name.toUpperCase()) ->
	s.table.addAll(d.entities().table()) ->
	s
	;

table( Entity e) :
	let t = new Table :
	t.setName(e.name.plural().toUpperCase()) ->
	t.column.addAll(e.features.column()) ->
	t
	;

column( Feature f ) :
	let t = new Table :
	t.setName(f.name) ->
	t
	;

plural( String s ) :
	s + "s"
	;
